{
  "name": "tailwindcss-analysis",
  "version": "0.4.0",
  "description": "Analyse the TailwindCSS classes used in your application",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "commonjs",
  "files": [
    "dist",
    "app/dist/**/*"
  ],
  "engines": {
    "node": ">=16"
  },
  "bin": {
    "tailwindcss-analysis": "index.js"
  },
  "scripts": {
    "start": "tsup src/index.ts --watch",
    "build": "tsup src/index.ts --minify terser --format esm,cjs --dts",
    "prepare": "pnpm run build && pnpm run build:app",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "dev:app": "vite",
    "build:app": "tsc && vite build",
    "serve:app": "vite preview"
  },
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "keywords": [
    "analysis",
    "tailwindcss"
  ],
  "author": "Varun A P",
  "module": "dist/index.mjs",
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.mjs",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/file": "^12.0.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/connect": "^3.4.38",
    "@types/cross-spawn": "^6.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "size-limit": "^12.0.0",
    "size-limit-node-esbuild": "^0.4.0",
    "terser": "^5.44.1",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  },
  "dependencies": {
    "analyze-css": "^2.4.22",
    "cac": "^6.7.14",
    "connect": "^3.7.0",
    "cross-spawn": "^7.0.6",
    "cssjson": "^2.1.3",
    "fs-extra": "^11.3.2",
    "get-port": "^7.1.0",
    "open": "^11.0.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sirv": "^3.0.2",
    "swr": "^2.3.7",
    "tailwindcss": "^4.1.17",
    "tmp": "^0.2.5"
  }
}
