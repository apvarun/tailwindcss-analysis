{
  "name": "tailwindcss-analysis",
  "version": "0.2.1",
  "description": "Analyse the TailwindCSS classes used in your application",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "commonjs",
  "files": [
    "dist",
    "app/dist/**/*"
  ],
  "engines": {
    "node": ">=16"
  },
  "bin": {
    "tailwindcss-analysis": "index.js"
  },
  "scripts": {
    "start": "tsup src/index.ts --watch",
    "build": "tsup src/index.ts --minify terser --format esm,cjs --dts",
    "prepare": "npm run build && npm run build:app",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "dev:app": "vite",
    "build:app": "tsc && vite build",
    "serve:app": "vite preview"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "keywords": [
    "analysis",
    "tailwindcss"
  ],
  "author": "Varun A P",
  "module": "dist/index.mjs",
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.mjs",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/file": "^9.0.0",
    "@types/connect": "^3.4.36",
    "@types/fs-extra": "^11.0.2",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.4.16",
    "husky": "^8.0.3",
    "postcss": "^8.4.31",
    "size-limit": "^9.0.0",
    "size-limit-node-esbuild": "^0.2.0",
    "terser": "^5.22.0",
    "tslib": "^2.6.2",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  },
  "dependencies": {
    "analyze-css": "^2.1.123",
    "cac": "^6.7.14",
    "connect": "^3.7.0",
    "cssjson": "^2.1.3",
    "fs-extra": "^11.1.1",
    "get-port": "^7.0.0",
    "open": "^9.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sirv": "^2.0.3",
    "swr": "^2.2.4",
    "tailwindcss": "^3.3.3",
    "tmp": "^0.2.1"
  }
}
